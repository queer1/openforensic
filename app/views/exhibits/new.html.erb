<% provide(:title, 'Submit New Evidence') %>
<h1>Submit evidence to this investigation</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @exhibit, :url => investigation_exhibits_path, :html => {:multipart => true} do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :Name %>
      <%= f.text_field :name %>
    
      <%= f.label :Background %>
      <%= f.text_area :content %>
      
      <%= f.label :Media %>
      <%= f.text_field :media %>
      
      <div class="categories">
      <%= f.label :Category %>
        <% Category.all.each do |category| %>
        <div class="category">
          <%= check_box_tag "exhibit[category_ids][]", category.id %>
          <%= category.name %>
        </div>
        <% end %>
      </div>
      <br clear="all">

      <%= f.submit "Add this Evidence", class: "btn btn-large btn-info" %>
    <% end %>
    
    
    
  </div>
</div>
